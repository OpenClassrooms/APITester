{
  "name": "openclassrooms/open-api-testing",
  "type": "project",
  "license": "proprietary",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "OpenAPITesting\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OpenAPITesting\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.4",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "ext-json": "*",
    "cebe/php-openapi": "^1.5",
    "guzzlehttp/promises": "~1.4.0",
    "monolog/monolog": "^1.25.1",
    "n98/junit-xml": "1.*",
    "nelmio/alice": "3.*",
    "nesbot/carbon": "^2.55",
    "nyholm/psr7": "1.*",
    "php-http/httplug": "^2.2",
    "psr/http-client": "^1.0",
    "psr/http-message": "1.*",
    "roave/you-are-using-it-wrong": "1.7.*",
    "symfony/console": "^4.4",
    "symfony/http-client": "^4.4",
    "symfony/http-kernel": "^4.4",
    "symfony/psr-http-message-bridge": "2.*",
    "symfony/serializer": "^4.4"
  },
  "require-dev": {
    "ergebnis/phpstan-rules": "^1.0",
    "korbeil/phpstan-generic-rules": "^1.0",
    "orklah/psalm-elvis-begone": "^1.0",
    "orklah/psalm-insane-comparison": "^1.0",
    "orklah/psalm-strict-equality": "^2.0",
    "orklah/psalm-type-setters-params": "^1.0",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan": "^1.2",
    "phpstan/phpstan-beberlei-assert": "^1.0",
    "phpstan/phpstan-deprecation-rules": "^1.0",
    "phpstan/phpstan-phpunit": "^1.0",
    "phpstan/phpstan-strict-rules": "^1.1",
    "phpstan/phpstan-symfony": "^1.0",
    "phpunit/phpunit": "9.5.*",
    "psalm/plugin-phpunit": "^0.16.1",
    "roave/security-advisories": "dev-latest",
    "spaze/phpstan-disallowed-calls": "^2.1",
    "symfony/var-dumper": "^4.2",
    "symfony/yaml": "^4.2",
    "symplify/easy-coding-standard": "^9.4",
    "thecodingmachine/phpstan-strict-rules": "^1.0",
    "veewee/composer-run-parallel": "^1.1",
    "vimeo/psalm": "^4.14"
  },
  "scripts": {
    "check": [
      "@fix-cs",
      "@check-static",
      "@test"
    ],
    "parallel-check": [
      "@parallel fix-cs",
      "@parallel check-static",
      "@parallel test"
    ],
    "check-cs": [
      "vendor/bin/ecs check --ansi -c ecs.php",
      "vendor/bin/ecs check-markdown README.md --ansi -c ecs.php"
    ],
    "fix-cs": [
      "vendor/bin/ecs check --fix --ansi -c ecs.php ",
      "vendor/bin/ecs check-markdown README.md --fix --ansi -c ecs.php"
    ],
    "check-static": [
      "@psalm",
      "@phpstan"
    ],
    "test": [
      "@unit"
    ],
    "unit": "vendor/bin/phpunit -c phpunit.xml --coverage-clover coverage.xml",
    "psalm": "vendor/bin/psalm -c psalm.xml",
    "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon --ansi",
    "ecs": "@check-cs"
  }
}
