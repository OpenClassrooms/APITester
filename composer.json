{
  "name": "openclassrooms/open-api-testing",
  "type": "project",
  "license": "proprietary",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "bin-dir": "bin",
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "roave/you-are-using-it-wrong": true,
      "veewee/composer-run-parallel": true,
      "composer/package-versions-deprecated": true
    }
  },
  "autoload": {
    "psr-4": {
      "OpenAPITesting\\": "src/",
      "OpenAPITesting\\Symfony\\Component\\PropertyInfo\\": "lib/property-info/"
    },
    "files": [
      "config/constants.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "OpenAPITesting\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.4",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "canvural/php-openapi-faker": "^1.0",
    "ext-yaml": "*",
    "cebe/php-openapi": "^1.5",
    "fakerphp/faker": "^1.9",
    "firebase/php-jwt": "^5.3.0",
    "guzzlehttp/promises": "~1.4.0",
    "hanneskod/classtools": "^1.2",
    "illuminate/collections": "v8.99.9",
    "monolog/monolog": "^1.25.1",
    "n98/junit-xml": "1.*",
    "nesbot/carbon": "^2.48",
    "nyholm/psr7": "1.*",
    "php-http/httplug": "^2.2",
    "phpstan/phpdoc-parser": "^1.2",
    "phpunit/phpunit": "^9.5",
    "psr/http-client": "^1.0",
    "psr/http-message": "1.*",
    "roave/you-are-using-it-wrong": "^1.7",
    "symfony/console": "^4.4",
    "symfony/dotenv": " ^4.4",
    "symfony/finder": " ^4.4",
    "symfony/http-client": "^4.4",
    "symfony/http-kernel": "^4.4",
    "symfony/property-access": " ^4.4",
    "symfony/property-info": " ^4.4",
    "symfony/psr-http-message-bridge": "^1.0",
    "symfony/serializer": " ^4.4",
    "symfony/yaml": " ^4.4"
  },
  "require-dev": {
    "ergebnis/phpstan-rules": "^1.0",
    "korbeil/phpstan-generic-rules": "^1.0",
    "nunomaduro/phpinsights": "^2.1",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan": "dev-master",
    "phpstan/phpstan-beberlei-assert": "^1.0",
    "phpstan/phpstan-deprecation-rules": "^1.0",
    "phpstan/phpstan-phpunit": "^1.0",
    "phpstan/phpstan-strict-rules": "^1.1",
    "phpstan/phpstan-symfony": "^1.0",
    "roave/security-advisories": "dev-latest",
    "spaze/phpstan-disallowed-calls": "^2.1",
    "symfony/var-dumper": "^4.4",
    "symplify/easy-coding-standard": "^9.4",
    "thecodingmachine/phpstan-strict-rules": "^1.0",
    "veewee/composer-run-parallel": "^1.1"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/sidux/collections"
    }
  ],
  "scripts": {
    "check": [
      "@fix-cs",
      "@check-static",
      "@test"
    ],
    "parallel-check": [
      "@parallel fix-cs",
      "@parallel check-static",
      "@parallel test"
    ],
    "check-cs": [
      "bin/ecs check --ansi -c config/ecs.php",
      "bin/ecs check-markdown README.md --ansi -c config/ecs.php"
    ],
    "fix-cs": [
      "bin/ecs check --fix --ansi -c config/ecs.php ",
      "bin/ecs check-markdown README.md --fix --ansi -c config/ecs.php"
    ],
    "check-static": [
      "@phpstan"
    ],
    "test": [
      "@unit"
    ],
    "unit": "bin/phpunit -c config/phpunit.xml --coverage-clover build/coverage/coverage.xml --exclude-group=integration",
    "psalm": "bin/psalm -c config/psalm.xml",
    "phpstan": "bin/phpstan analyse -c config/phpstan.neon --ansi",
    "ecs": "@check-cs"
  }
}
